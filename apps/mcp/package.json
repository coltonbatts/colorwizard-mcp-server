{
  "name": "@colorwizard/mcp",
  "version": "1.0.0",
  "private": true,
  "description": "ColorWizard MCP server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "npm run dev:http",
    "dev:http": "node --import tsx demo/server.ts",
    "dev:stdio": "node --import tsx src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:pipeline": "tsc test-pipeline.ts --outDir dist --esModuleInterop --moduleResolution node --module esnext --target es2020 && node dist/test-pipeline.js",
    "demo:build": "tsc demo/server.ts --outDir dist/demo --esModuleInterop --moduleResolution node --module esnext --target es2020",
    "demo:start": "node dist/demo/server.js"
  },
  "dependencies": {
    "pdfkit": "^0.15.2",
    "sharp": "^0.34.5",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@types/node": "^25.2.0",
    "@types/pdfkit": "^0.17.4",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
