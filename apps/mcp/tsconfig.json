{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": "."
  },
  "include": [
    "src/**/*.ts",
    "demo/**/*.ts",
    "test-*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
